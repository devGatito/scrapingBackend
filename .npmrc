# Force npm usage and disable pnpm
engine-strict=true
package-lock=true
prefer-offline=true
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Explicitly disable pnpm
npm_config_user_agent=npm/10.0.0 node/v20.10.0 linux x64

# Ensure npm is used
script-shell=bash
package-manager=npm@10.0.0

# Disable pnpm
enable-pnpm=false

# Additional npm optimizations
prefer-offline=true
prefer-frozen-lockfile=false
prefer-deferred-install=true
prefer-dev=true
prefer-peer=true
prefer-prefer-offline=true
prefer-prod=true
prefer-publish=false
prefer-repo=false
prefer-scripts=true
prefer-workspace-packages=false
prefer-workspace-root=false
prefer-workspace-symlinks=false
prefer-workspace-tools=false
prefer-workspace-workspace-packages=false
prefer-workspace-workspace-root=false
prefer-workspace-workspace-symlinks=false
prefer-workspace-workspace-tools=false
